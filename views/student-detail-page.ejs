<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Dashboard - Ramakrishna Mission Language and Culture School</title>
    <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@400;700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="/css/student-detail-page.css">
    <link rel="stylesheet" href="https://code.jquery.com/ui/1.12.1/themes/base/jquery-ui.css">
</head>

<body>
    <div class="sidebar">
        <h2>Dashboard</h2>
        <a href="/students">Students</a>
        <a href="/faculty">Faculty</a>
        <a href="/course">Course</a>
        <a href="/new-admission">New Admission</a>
        <a href="/all-admissions">All Admissions</a>
        <a href="/fees">Fees</a>
    </div>
    <div class="main-content" data-student-id="<%= studentId %>">
        <h2>Student Details</h2>

        <!-- Personal Details Container -->
        <div class="details-container">
            <h3>Personal Details</h3>
            <form id="personalDetailsForm">
                <div class="form-row">
                    <div class="form-group">
                        <label for="name">Name:</label>
                        <input type="text" id="name" name="name">
                    </div>
                    <div class="form-group">
                        <label for="fathersName">Father's Name:</label>
                        <input type="text" id="fathersName" name="fathersName">
                    </div>
                </div>
                <div class="form-row">
                    <div class="form-group">
                        <label for="email">Email:</label>
                        <input type="email" id="email" name="email">
                    </div>
                    <div class="form-group">
                        <label for="aadhaarNo">Aadhaar No:</label>
                        <input type="text" id="aadhaarNo" name="aadhaarNo">
                    </div>
                </div>
                <div class="form-row">
                    <div class="form-group">
                        <label for="phone">Phone:</label>
                        <input type="text" id="phone" name="phone">
                    </div>
                    <div class="form-group">
                        <label for="address">Address:</label>
                        <textarea id="address" name="address"></textarea>
                    </div>
                </div>
                <button type="button" id="saveDetailsButton">Save Details</button>
            </form>
        </div>

        <!-- Enrolled Courses Container -->
        <div class="details-container enrolled-courses">
            <div class="batches">
                <h3>Enrolled Courses</h3>
                <table id="batchCourseTable">
                    <thead>
                        <tr>
                            <th>Course Name</th>
                            <th>Batch Title</th>
                            <th>Faculty Name</th>
                            <th>Timing</th>
                            <th>Starting Date</th>
                        </tr>
                    </thead>
                    <tbody>
                        <!-- Batch/Course details will be populated here -->
                    </tbody>
                </table>
            </div>
            <div class="transactions" id="transactionsContainer" style="display: none;">
                <h3>Transactions</h3>
                <div class="transaction-table-container">
                    <table id="transactionTable">
                        <thead>
                            <tr>
                                <th>Date</th>
                                <th>New Payment</th>
                                <th>Fees Paid</th>
                                <th>Due</th>
                                <th>Receipt ID</th>
                            </tr>
                        </thead>
                        <tbody>
                            <!-- Transactions will be populated here -->
                        </tbody>
                    </table>
                </div>
                <button id="makeTransactionButton">Make Transaction</button>
            </div>
        </div>
    </div>

    <!-- Transaction Modal -->
    <div id="transactionModal" class="modal">
        <div class="modal-content">
            <span class="close">&times;</span>
            <h3>New Transaction</h3>
            <form id="transactionForm">
                <input type="hidden" id="modalStudentId">
                <input type="hidden" id="modalBatchId">
                <div class="form-group">
                    <label for="newPayment">New Payment:</label>
                    <input type="number" id="newPayment" name="newPayment" step="0.01">
                </div>
                <button type="button" id="submitTransactionButton">Submit</button>
            </form>
        </div>
    </div>


    <!-- Ensure jQuery is included before your custom script -->
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://code.jquery.com/ui/1.12.1/jquery-ui.min.js"></script>
    <script src="/js/student-detail-page.js"></script>
</body>

</html>