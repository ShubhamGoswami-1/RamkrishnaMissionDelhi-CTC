<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Dashboard - Ramakrishna Mission Language and Culture School</title>
    <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@400;700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="/css/student-detail-page.css">
    <link rel="stylesheet" href="https://code.jquery.com/ui/1.12.1/themes/base/jquery-ui.css">
</head>

<body>
    <div class="sidebar">
        <h2>Dashboard</h2>
        <a href="/students">Students</a>
        <a href="/faculty">Faculty</a>
        <a href="/course">Course</a>
        <a href="/new-admission">New Admission</a>
        <a href="/all-admissions">All Admissions</a>
        <a href="/fees">Fees</a>
    </div>
    <div class="main-content" data-student-id="<%= studentId %>">
        <h2>Student Details</h2>

        <!-- Personal Details Container -->
        <div class="details-container">
            <h3>Personal Details</h3>
            <form id="personalDetailsForm">
                <div class="form-row">
                    <div class="form-group">
                        <label for="name">Name:</label>
                        <input type="text" id="name" name="name">
                        <span id="nameError" class="error-message" style="color:red; display:none;">Name is
                            required</span>
                    </div>
                    <div class="form-group">
                        <label for="fathersName">Father's Name:</label>
                        <input type="text" id="fathersName" name="fathersName">
                        <span id="fathersNameError" class="error-message" style="color:red; display:none;">Father's name
                            is required</span>
                    </div>
                </div>
                <div class="form-row">
                    <div class="form-group">
                        <label for="email">Email:</label>
                        <input type="email" id="email" name="email">
                        <span id="emailError" class="error-message" style="color:red; display:none;">Invalid email
                            format</span>
                    </div>
                    <div class="form-group">
                        <label for="aadhaarNo">Aadhaar No:</label>
                        <input type="text" id="aadhaarNo" name="aadhaarNo">
                        <span id="aadhaarError" class="error-message" style="color:red; display:none;">Aadhaar number
                            must be 12 digits</span>
                    </div>
                </div>
                <div class="form-row">
                    <div class="form-group">
                        <label for="phone">Phone:</label>
                        <input type="text" id="phone" name="phone">
                        <span id="phoneError" class="error-message" style="color:red; display:none;">Phone number must
                            be 10 digits</span>
                    </div>
                    <div class="form-group">
                        <label for="address">Address:</label>
                        <textarea id="address" name="address"></textarea>
                        <span id="addressError" class="error-message" style="color:red; display:none;">Address is
                            required</span>
                    </div>
                </div>

                <button type="button" id="saveDetailsButton">Save Details</button>
            </form>
        </div>

        <!-- Enrolled Courses Container -->
        <div class="details-container enrolled-courses">
            <div class="batches">
                <h3>Enrolled Courses</h3>
                <div class="course-enrolled-container">
                    <table id="batchCourseTable">
                        <thead>
                            <tr>
                                <th>Course Name</th>
                                <th>Batch Title</th>
                                <th>Faculty Name</th>
                                <th>Timing</th>
                                <th>Starting Date</th>
                            </tr>
                        </thead>
                        <tbody>
                            <!-- Batch/Course details will be populated here -->
                        </tbody>
                    </table>
                </div>
            </div>
            <div class="transactions" id="transactionsContainer" style="display: none;">
                <h3>Transactions</h3>
                <div class="transaction-table-container">
                    <table id="transactionTable">
                        <thead>
                            <tr>
                                <th>Date</th>
                                <th>New Payment</th>
                                <th>Fees Paid</th>
                                <th>Due</th>
                                <th>Payment Type</th>
                                <th>Receipt ID</th>
                            </tr>
                        </thead>
                        <tbody>
                            <!-- Transactions will be populated here -->
                        </tbody>
                    </table>
                </div>
                <button id="makeTransactionButton">Make Transaction</button>
            </div>
        </div>

        <!-- Transaction Modal -->
        <div id="transactionModal" class="modal">
            <!-- Modal content -->
            <div class="modal-content">
                <span class="close">&times;</span>
                <h2>Make a Payment</h2>
                <div class="form-group">
                    <p>Student Name: <span id="studentName"></span></p>
                </div>
                <div class="form-group">
                    <p>Batch Title: <span id="batchTitle"></span></p>
                </div>
                <form id="transactionForm">
                    <input type="hidden" id="modalStudentId">
                    <input type="hidden" id="modalBatchId">
                    <div class="form-row">
                        <div class="form-group">
                            <label for="newPayment">Payment Amount:</label>
                            <input type="number" id="newPayment" name="newPayment" required>
                        </div>
                        <div class="form-group">
                            <label for="paymentType">Payment Type:</label>
                            <select id="paymentType" name="paymentType" required>
                                <option value="Online">Online</option>
                                <option value="Cash">Cash</option>
                            </select>
                        </div>
                    </div>
                    <button type="button" id="submitTransactionButton" class="btn">Submit</button>
                </form>
            </div>
        </div>
        <div id="confirmationModal" class="modal">
            <div class="modal-content">
                <span class="close">&times;</span>
                <h2>Confirm Payment</h2>
                <p>Are you sure you want to make this payment?</p>
                <button id="confirmTransactionButton" class="btn">Yes</button>
                <button id="cancelTransactionButton" class="btn">No</button>
            </div>
        </div>

    </div>


    <!-- Ensure jQuery is included before your custom script -->
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://code.jquery.com/ui/1.12.1/jquery-ui.min.js"></script>
    <script src="/js/student-detail-page.js"></script>
</body>

</html>