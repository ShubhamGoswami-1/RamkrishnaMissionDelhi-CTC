<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Dashboard - Ramakrishna Mission Language and Culture School</title>
    <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@400;700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="/css/batch-detail-page.css">
    <link rel="stylesheet" href="https://code.jquery.com/ui/1.12.1/themes/base/jquery-ui.css">
</head>

<body>
    <div class="sidebar">
        <h2>Dashboard</h2>
        <a href="/students">Students</a>
        <a href="/faculty">Faculty</a>
        <a href="/course">Course</a>
        <a href="/new-admission">New Admission</a>
        <a href="/all-admissions">All Admissions</a>
        <a href="/fees">Fees</a>
    </div>
    <div class="main-content" data-batch-id="<%= batchId %>">
        <h2>Batch Details</h2>

        <!-- Batch Details Container -->
        <div class="details-container">
            <h3>Batch Details</h3>
            <form id="personalDetailsForm">
                <div class="form-row">
                    <div class="form-group">
                        <label for="name">Title:</label>
                        <input type="text" id="name" name="name">
                        <!-- <span id="nameError" class="error-message" style="color:red; display:none;">Name is
                            required</span> -->
                    </div>
                    <div class="form-group">
                        <label for="fathersName">Timing:</label>
                        <input type="text" id="fathersName" name="fathersName">
                        <!-- <span id="fathersNameError" class="error-message" style="color:red; display:none;">Father's name
                            is required</span> -->
                    </div>
                </div>
                <div class="form-row">
                    <div class="form-group">
                        <label for="email">Fees:</label>
                        <input type="email" id="email" name="email">
                        <!-- <span id="emailError" class="error-message" style="color:red; display:none;">Invalid email
                            format</span> -->
                    </div>
                    <div class="form-group">
                        <label for="aadhaarNo">GST:</label>
                        <input type="text" id="aadhaarNo" name="aadhaarNo">
                        <!-- <span id="aadhaarError" class="error-message" style="color:red; display:none;">Aadhaar number
                            must be 12 digits</span> -->
                    </div>
                </div>
                <!-- <div class="form-row">
                    <div class="form-group">
                        <label for="phone">Phone:</label>
                        <input type="text" id="phone" name="phone">
                        <span id="phoneError" class="error-message" style="color:red; display:none;">Phone number must
                            be 10 digits</span>
                    </div>
                    <div class="form-group">
                        <label for="address">Active:</label>
                        <textarea id="address" name="address"></textarea>
                        <span id="addressError" class="error-message" style="color:red; display:none;">Address is
                            required</span>
                    </div>
                </div> -->
                    <div class="form-group">
                        <label for="address">Active:</label>
                        <textarea id="address" name="address"></textarea>
                    </div>
                       
                <button type="button" id="saveDetailsButton">Save Details</button>
            </form>
        </div>


        <!-- Enrolled Students Container -->
        <div class="details-container enrolled-courses">
            <div class="batches">
                <h3>Enrolled Students</h3>
                <div class="enrolled-student-table-container">
                    <table id="batchCourseTable">
                        <thead>
                            <tr>
                                <th>Name</th>
                                <th>Phone</th>
                                <th>Aadhaar</th>
                                <th>Address</th>
                                <th>Admission Date</th>
                            </tr>
                        </thead>
                        <tbody>
                            <!-- Batch/Course details will be populated here -->
                        </tbody>
                    </table>
                </div>
            </div>
            <div class="transactions" id="transactionsContainer" style="display: none;">
                <h3>Transactions</h3>
                <div class="transaction-table-container">
                    <table id="transactionTable">
                        <thead>
                            <tr>
                                <th>Date</th>
                                <th>New Payment</th>
                                <th>Fees Paid</th>
                                <th>Due</th>
                                <th>Payment Mode</th>
                                <th>Receipt ID</th>
                            </tr>
                        </thead>
                        <tbody>
                            <!-- Transactions will be populated here -->
                        </tbody>
                    </table>
                </div>
                <button id="makeTransactionButton">Make Transaction</button>
            </div>
        </div>
    </div>

    <!-- Transaction Modal -->
    <div id="transactionModal" class="modal">
        <div class="modal-content">
            <span class="close">&times;</span>
            <h3>New Transaction</h3>
            <form id="transactionForm">
                <input type="hidden" id="modalStudentId">
                <input type="hidden" id="modalBatchId">
                <div class="form-group">
                    <label for="studentName">Student Name:</label>
                    <input type="text" id="studentName" name="studentName" readonly>
                </div>
                <div class="form-group">
                    <label for="batchTitle">Batch Title:</label>
                    <input type="text" id="batchTitle" name="batchTitle" readonly>
                </div>
                <div class="form-group">
                    <label for="newPayment">New Payment:</label>
                    <input type="number" id="newPayment" name="newPayment" step="0.01">
                </div>
                <div class="form-group">
                    <label for="paymentType">Payment Type:</label>
                    <select id="paymentType" name="paymentType">
                        <option value="Online">Online</option>
                        <option value="Cash">Cash</option>
                    </select>
                </div>
                <button type="button" id="submitTransactionButton">Submit</button>
            </form>
        </div>
    </div>

    <!-- Confirmation Modal -->
    <div id="confirmationModal" class="modal">
        <div class="modal-content">
            <span class="close">&times;</span>
            <h3>Confirm Payment</h3>
            <p>Are you sure you want to make this payment?</p>
            <button id="confirmPaymentButton">Yes</button>
            <button id="cancelPaymentButton">No</button>
        </div>
    </div>

    <!-- Ensure jQuery is included before your custom script -->
    <!-- <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://code.jquery.com/ui/1.12.1/jquery-ui.min.js"></script> -->
    <script src="/js/batch-detail-page.js"></script>
</body>

</html>